---
const { roadmaps } = Astro.props;
---

<div class="mb-6">
  <label for="roadmap-filter" class="block text-sm font-medium text-gray-700 mb-2">Filtrar por Roadmap:</label>
  <select id="roadmap-filter" class="block w-full p-2 border border-gray-300 rounded-md">
    <option value="all">Todos los Roadmaps</option>
    {roadmaps.map(roadmap => (
      <option value={roadmap}>{roadmap}</option>
    ))}
  </select>
</div>